@model IEnumerable<HaberSitem.Core.Model.User>

@{
    ViewData["Title"] = "Oluştur";
}

<h2>Kullanıcılar</h2>

<p>
    <a asp-action="Create">Kullanıcı Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CretaeDate)
                </th>
              
                <th>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
             
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CretaeDate)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detaylar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
